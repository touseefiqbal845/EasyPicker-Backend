{
  "builds": [
    {
      "src": "build/**",
      "use": "@vercel/static"
    },
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/product",
      "dest": "index.js"
    },
    {
      "src": "/product/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/categories",
      "dest": "index.js"
    },
    {
      "src": "/categories/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/brands",
      "dest": "index.js"
    },
    {
      "src": "/brands/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/users",
      "dest": "index.js"
    },
    {
      "src": "/users/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/auth",
      "dest": "index.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/cart",
      "dest": "index.js"
    },
    {
      "src": "/cart/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/orders",
      "dest": "index.js"
    },
    {
      "src": "/orders/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/webhook",
      "dest": "index.js"
    },
    {
      "src": "/create-payment-intent",
      "dest": "index.js"
    },
    {
      "src": "/",
      "dest": "build/index.html"
    },
    {
      "src": "/login",
      "dest": "build/index.html" 
    },
       {
     "src": "/products/(.*)",
  "dest": "build/index.html" 
    },
     
    {
      "src": "/(.+)",
      "dest": "build/$1"
    }
  ]
}


